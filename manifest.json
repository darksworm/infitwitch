{
  "manifest_version": 2,

  "name": "InfiTwitch",
  "description": "Your mom :)",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": "static/twitch.png",
    "default_title": "Open settings"
  },
  "permissions": [
    "activeTab",
    "https://www.twitch.tv/*",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "js/vendor.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "run_at" : "document_end",
      "matches": ["https://www.twitch.tv/*"],
      "js": [
        "js/vendor.js",
        "js/twitch.js"
      ]
    }
  ]
}